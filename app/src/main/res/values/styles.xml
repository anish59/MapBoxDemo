<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomLocationLayer">
        <item name="backgroundDrawable">@drawable/empty_icon</item>
        <item name="foregroundDrawable">@drawable/mapbox_user_icon</item>
        <item name="bearingDrawable">@drawable/mapbox_user_bearing_icon</item>
        <item name="navigationDrawable">@drawable/ic_car_nav</item>
        <item name="accuracyAlpha">0.15</item>
        <item name="accuracyColor">@color/mapbox_plugin_location_layer_blue</item>
    </style>

</resources>
